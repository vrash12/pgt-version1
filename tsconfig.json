{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    // ← Add this so TS will look in your `types/` folder
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    // ← Include your custom declaration files too
    "types/**/*.d.ts"
  ]
}
